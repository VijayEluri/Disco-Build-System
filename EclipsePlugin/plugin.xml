<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.buildml.eclipse.MainEditor"
            default="true"
            extensions="bml"
            icon="images/buildml_editor_img.gif"
            id="com.buildml.eclipse.editors.main"
            name="BuildML Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Commands related to the BuildML Build System"
            id="com.buildml.eclipse.commands.category"
            name="BuildML Build System">
      </category>
      <command
            categoryId="com.buildml.eclipse.commands.category"
            description="Show the build tasks that either read or write these files"
            id="com.buildml.eclipse.commands.showTasksThatUse"
            name="Show Tasks that Use these Files">
         <commandParameter
               id="com.buildml.eclipse.commandParameters.accessType"
               name="accessType"
               optional="false">
         </commandParameter>
      </command>
      <command
            categoryId="com.buildml.eclipse.commands.category"
            description="Show the build tasks that read from these files"
            id="com.buildml.eclipse.commands.showTasksThatRead"
            name="Show Tasks that Read these Files">
         <commandParameter
               id="com.buildml.eclipse.commandParameters.accessType"
               name="accessType"
               optional="false">
         </commandParameter>
      </command>
      <command
            categoryId="com.buildml.eclipse.commands.category"
            description="Show the build tasks that write to these files"
            id="com.buildml.eclipse.commands.showTasksThatWrite"
            name="Show Tasks that Write these Files">
         <commandParameter
               id="com.buildml.eclipse.commandParameters.accessType"
               name="accessType"
               optional="false">
         </commandParameter>
      </command>
      <command
            categoryId="com.buildml.eclipse.commands.category"
            description="Show the files that are derived from or input to these files."
            id="com.buildml.eclipse.commands.showDerivedInputFiles"
            name="Show Derived/Input Files">
         <commandParameter
               id="com.buildml.eclipse.commandParameters.derivedType"
               name="derivedType"
               optional="false">
         </commandParameter>
      </command>
      <command
            categoryId="com.buildml.eclipse.commands.category"
            description="Fully expand this item and all its children"
            id="com.buildml.eclipse.commands.expandItemSubTree"
            name="Expand Subtree">
      </command>
      <command
            id="com.buildml.eclipse.commands.showPathRoots"
            name="Show path roots">
         <commandParameter
               id="com.buildml.eclipse.commandParameters.showDetail"
               name="showDetail"
               optional="false">
         </commandParameter>
      </command>
      <command
            defaultHandler="com.buildml.eclipse.handlers.HandlerShowDetail"
            id="com.buildml.eclipse.commands.showPackages"
            name="Show Packages">
         <commandParameter
               id="com.buildml.eclipse.commandParameters.showDetail"
               name="showDetail"
               optional="true">
         </commandParameter>
      </command>
      <command
            defaultHandler="com.buildml.eclipse.handlers.HandlerShowDetail"
            id="com.buildml.eclipse.commands.showHiddenPaths"
            name="Show hidden paths">
         <commandParameter
               id="com.buildml.eclipse.commandParameters.showDetail"
               name="showDetail"
               optional="true">
         </commandParameter>
      </command>
      <command
            defaultHandler="com.buildml.eclipse.handlers.HandlerHideRevealPath"
            id="com.buildml.eclipse.commands.hideRevealPath"
            name="Hide / Reveal Selected Items">
         <commandParameter
               id="com.buildml.eclipse.commandParameters.hideRevealType"
               name="Hide / Reveal Type"
               optional="true">
         </commandParameter>
      </command>
      <command
            defaultHandler="com.buildml.eclipse.handlers.HandlerFilterPackages"
            id="com.buildml.eclipse.commands.filterPackages"
            name="Filter Packages">
      </command>
      <command
            defaultHandler="com.buildml.eclipse.files.handlers.HandlerFilterByName"
            id="com.buildml.eclipse.commands.filterByName"
            name="Filter by Name">
      </command>
      <command
            defaultHandler="com.buildml.eclipse.files.handlers.HandlerSearchByName"
            id="com.buildml.eclipse.commands.searchByName"
            name="Search by Name">
      </command>
      <command
            defaultHandler="com.buildml.eclipse.handlers.HandlerNewEditorTab"
            id="com.buildml.eclipse.commands.newEditorTab"
            name="New Editor Tab">
         <commandParameter
               id="com.buildml.eclipse.commandParameters.newEditorTab"
               name="newEditorTab"
               optional="false">
         </commandParameter>
      </command>
      <command
            id="com.buildml.eclipse.commands.removeEditorTab"
            name="Remove Editor Tab">
      </command>
      <command
            defaultHandler="com.buildml.eclipse.handlers.HandlerNextEditorTab"
            id="com.buildml.eclipse.commands.nextEditorTab"
            name="Switch to Next Editor Tab">
      </command>
      <command
            defaultHandler="com.buildml.eclipse.handlers.HandlerPreviousEditorTab"
            id="com.buildml.eclipse.commands.previousEditorTab"
            name="Switch to Previous Editor Tab">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=buildmlactions">
         <command
               commandId="com.buildml.eclipse.commands.expandItemSubTree"
               label="Expand Subtree"
               style="push">
         </command>
         <command
               commandId="com.buildml.eclipse.commands.hideRevealPath"
               label="Hide Selected"
               style="push">
            <parameter
                  name="com.buildml.eclipse.commandParameters.hideRevealType"
                  value="hide">
            </parameter>
            <visibleWhen>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="com.buildml.utils.types.IntegerTreeRecord">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.buildml.eclipse.commands.hideRevealPath"
               label="Reveal Selected"
               style="push">
            <parameter
                  name="com.buildml.eclipse.commandParameters.hideRevealType"
                  value="reveal">
            </parameter>
            <visibleWhen>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="com.buildml.utils.types.IntegerTreeRecord">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <separator
               name="com.buildml.eclipse.commands.separator1"
               visible="true">
         </separator>
         <menu
               label="Show Detail...">
            <command
                  commandId="com.buildml.eclipse.commands.showPathRoots"
                  icon="images/show_roots_icon.gif"
                  label="Path Roots"
                  style="toggle">
               <parameter
                     name="com.buildml.eclipse.commandParameters.showDetail"
                     value="path-roots">
               </parameter>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.showPackages"
                  label="Packages"
                  style="toggle">
               <parameter
                     name="com.buildml.eclipse.commandParameters.showDetail"
                     value="packages">
               </parameter>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.showHiddenPaths"
                  label="Hidden Paths"
                  style="toggle">
               <parameter
                     name="com.buildml.eclipse.commandParameters.showDetail"
                     value="show-hidden">
               </parameter>
            </command>
         </menu>
         <menu
               label="Show Tasks That..."
               mnemonic="T">
            <command
                  commandId="com.buildml.eclipse.commands.showTasksThatUse"
                  label="Use (Read or Write) These Files"
                  mnemonic="U"
                  style="push">
               <parameter
                     name="com.buildml.eclipse.commandParameters.accessType"
                     value="use">
               </parameter>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.showTasksThatRead"
                  label="Read From These Files"
                  mnemonic="R"
                  style="push">
               <parameter
                     name="com.buildml.eclipse.commandParameters.accessType"
                     value="read">
               </parameter>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.showTasksThatWrite"
                  label="Write To These Files"
                  mnemonic="W"
                  style="push">
               <parameter
                     name="com.buildml.eclipse.commandParameters.accessType"
                     value="write">
               </parameter>
            </command>
            <visibleWhen>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <instanceof
                           value="com.buildml.model.types.FileRecord">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </menu>
         <menu
               label="Show Derived Files..."
               mnemonic="D">
            <command
                  commandId="com.buildml.eclipse.commands.showDerivedInputFiles"
                  label="Directly Derived Files"
                  mnemonic="D"
                  style="push">
               <parameter
                     name="com.buildml.eclipse.commandParameters.derivedType"
                     value="directDerived">
               </parameter>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.showDerivedInputFiles"
                  label="All Derived Files"
                  mnemonic="A"
                  style="push">
               <parameter
                     name="com.buildml.eclipse.commandParameters.derivedType"
                     value="allDerived">
               </parameter>
            </command>
            <visibleWhen>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <instanceof
                           value="com.buildml.model.types.FileRecord">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </menu>
         <menu
               label="Show Input Files..."
               mnemonic="I">
            <command
                  commandId="com.buildml.eclipse.commands.showDerivedInputFiles"
                  label="Directly Input Files"
                  mnemonic="D"
                  style="push">
               <parameter
                     name="com.buildml.eclipse.commandParameters.derivedType"
                     value="directInput">
               </parameter>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.showDerivedInputFiles"
                  label="All Input Files"
                  mnemonic="A"
                  style="push">
               <parameter
                     name="com.buildml.eclipse.commandParameters.derivedType"
                     value="allInput">
               </parameter>
            </command>
            <visibleWhen>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <instanceof
                           value="com.buildml.model.types.FileRecord">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </menu>
         <separator
               name="com.buildml.eclipse.commands.separator2"
               visible="true">
         </separator>
         <command
               commandId="com.buildml.eclipse.commands.newEditorTab"
               label="Duplicate Editor Tab"
               style="push">
         </command>
         <command
               commandId="com.buildml.eclipse.commands.removeEditorTab"
               label="Remove Editor Tab"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.buildml.eclipse.toolbars.main">
            <command
                  commandId="com.buildml.eclipse.commands.newEditorTab"
                  icon="images/add_tab_icon.gif"
                  label="Duplicate Editor Tab"
                  style="pulldown">
               <visibleWhen>
                  <with
                        variable="activeEditorId">
                     <equals
                           value="com.buildml.eclipse.editors.main">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.removeEditorTab"
                  icon="images/remove_tab_icon.gif"
                  label="Remove Editor Tab"
                  style="push">
               <visibleWhen>
                  <with
                        variable="activeEditorId">
                     <equals
                           value="com.buildml.eclipse.editors.main">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <separator
                  name="com.buildml.eclipse.commands.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="com.buildml.eclipse.commands.showPathRoots"
                  icon="images/show_roots_icon.gif"
                  label="Show Path Roots"
                  style="toggle"
                  tooltip="Show path roots.">
               <parameter
                     name="com.buildml.eclipse.commandParameters.showDetail"
                     value="path-roots">
               </parameter>
               <visibleWhen>
                  <with variable="activeEditorId">
                     <equals value="com.buildml.eclipse.editors.main" />
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.showPackages"
                  icon="images/show_packages_icon.gif"
                  label="Show Packages"
                  style="toggle"
                  tooltip="Show the package that each item belongs to.">
               <parameter
                     name="com.buildml.eclipse.commandParameters.showDetail"
                     value="packages">
               </parameter>
               <visibleWhen>
                  <with variable="activeEditorId">
                     <equals value="com.buildml.eclipse.editors.main" />
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.showHiddenPaths"
                  icon="images/show_hidden_files.gif"
                  label="Show Hidden Paths"
                  style="toggle"
                  tooltip="Reveal items that were previously hidden.">
               <parameter
                     name="com.buildml.eclipse.commandParameters.showDetail"
                     value="show-hidden">
               </parameter>
               <visibleWhen>
                  <with variable="activeEditorId">
                     <equals value="com.buildml.eclipse.editors.main" />
                  </with>
               </visibleWhen>
            </command>
            <separator
                  name="com.buildml.eclipse.commands.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="com.buildml.eclipse.commands.filterPackages"
                  icon="images/filter_packages_icon.gif"
                  label="Filter output by selecting packages to display."
                  style="push">
                  <visibleWhen>
                     <with variable="activeEditorId">
                        <equals value="com.buildml.eclipse.editors.main" />
                     </with>
                  </visibleWhen>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.filterByName"
                  icon="images/filter_by_name_icon.gif"
                  label="Filter output by name."
                  style="push">
                  <visibleWhen>
                     <with variable="activeEditorId">
                        <equals value="com.buildml.eclipse.editors.main" />
                     </with>
                  </visibleWhen>
            </command>
            <command
                  commandId="com.buildml.eclipse.commands.searchByName"
                  icon="images/search_by_name_icon.gif"
                  label="Search by name."
                  style="push">
                  <visibleWhen>
                     <with variable="activeEditorId">
                        <equals value="com.buildml.eclipse.editors.main" />
                     </with>
                  </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="menu:com.buildml.eclipse.commands.newEditorTab">
         <command
               commandId="com.buildml.eclipse.commands.newEditorTab"
               label="1. Duplicate the Current Editor Tab"
               mnemonic="1"
               style="push">
            <parameter
                  name="com.buildml.eclipse.commandParameters.newEditorTab"
                  value="duplicate">
            </parameter>
         </command>
         <command
               commandId="com.buildml.eclipse.commands.newEditorTab"
               label="2. New Editor Showing All Files"
               mnemonic="2"
               style="push">
            <parameter
                  name="com.buildml.eclipse.commandParameters.newEditorTab"
                  value="allFiles">
            </parameter>
         </command>
         <command
               commandId="com.buildml.eclipse.commands.newEditorTab"
               label="3. New Empty Files Editor"
               mnemonic="3"
               style="push">
            <parameter
                  name="com.buildml.eclipse.commandParameters.newEditorTab"
                  value="emptyFiles">
            </parameter>
         </command>
         <command
               commandId="com.buildml.eclipse.commands.newEditorTab"
               label="4. New Editor Showing Unused Files"
               mnemonic="4"
               style="push">
            <parameter
                  name="com.buildml.eclipse.commandParameters.newEditorTab"
                  value="unusedFiles">
            </parameter>
         </command>
         <command
               commandId="com.buildml.eclipse.commands.newEditorTab"
               label="5. New Editor Showing Write-only Files"
               mnemonic="5"
               style="push">
            <parameter
                  name="com.buildml.eclipse.commandParameters.newEditorTab"
                  value="writeOnlyFiles">
            </parameter>
         </command>
         <command
               commandId="com.buildml.eclipse.commands.newEditorTab"
               label="6. New Editor Showing Most Popular Files"
               mnemonic="6"
               style="push">
            <parameter
                  name="com.buildml.eclipse.commandParameters.newEditorTab"
                  value="mostPopularFiles">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.buildml.eclipse.files.handlers.HandlerShowTasksThatUse"
            commandId="com.buildml.eclipse.commands.showTasksThatUse">
         <enabledWhen>
            <count
                  value="+">
            </count></enabledWhen>
      </handler>
      <handler
            class="com.buildml.eclipse.files.handlers.HandlerShowTasksThatUse"
            commandId="com.buildml.eclipse.commands.showTasksThatRead">
         <enabledWhen>
            <count
                  value="+">
            </count>
         </enabledWhen>
      </handler>
      <handler
            class="com.buildml.eclipse.files.handlers.HandlerShowTasksThatUse"
            commandId="com.buildml.eclipse.commands.showTasksThatWrite">
         <enabledWhen>
            <count
                  value="+">
            </count>
         </enabledWhen>
      </handler>
      <handler
            class="com.buildml.eclipse.files.handlers.HandlerShowDerivedFiles"
            commandId="com.buildml.eclipse.commands.showDerivedInputFiles">
         <enabledWhen>
            <and>
               <count
                     value="+">
               </count>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <instanceof
                           value="com.buildml.model.types.FileRecord">
                     </instanceof>
                  </iterate>
               </with>
            </and>
         </enabledWhen>
      </handler>
      <handler
            class="com.buildml.eclipse.handlers.HandlerExpandItemSubTree"
            commandId="com.buildml.eclipse.commands.expandItemSubTree">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <or>
                     <instanceof
                           value="com.buildml.eclipse.files.UIFileRecordDir">
                     </instanceof>
                     <instanceof
                           value="com.buildml.eclipse.actions.UIActionRecord">
                     </instanceof></or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.buildml.eclipse.handlers.HandlerShowDetail"
            commandId="com.buildml.eclipse.commands.showPathRoots">
         <enabledWhen>
            <test
                  args="path-roots"
                  property="com.buildml.eclipse.hasFeature">
            </test>
         </enabledWhen>
      </handler>
      <handler
            class="com.buildml.eclipse.handlers.HandlerRemoveEditorTab"
            commandId="com.buildml.eclipse.commands.removeEditorTab">
         <enabledWhen>
            <test
                  args="removable"
                  property="com.buildml.eclipse.hasFeature">
            </test>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.buildml.eclipse.preferences.TopLevelPreferencePage"
            id="com.buildml.eclipse.preferences.BuildMlPreferencePage"
            name="BuildML">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.buildml.eclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.buildml.eclipse.preferences.AppearancePreferencePage"
            id="com.buildml.eclipse.preferences.BuildMlAppearancePreferencePage"
            category="com.buildml.eclipse.preferences.BuildMlPreferencePage"
            name="Appearance">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.buildml.eclipse.commands.expandItemSubTree"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+E">
      </key>
      <key
            commandId="com.buildml.eclipse.commands.hideRevealPath"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="DEL">
         <parameter
               id="com.buildml.eclipse.commandParameters.hideRevealType"
               value="hide">
         </parameter>
      </key>
      <key
            commandId="com.buildml.eclipse.commands.hideRevealPath"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="INSERT">
         <parameter
               id="com.buildml.eclipse.commandParameters.hideRevealType"
               value="reveal">
         </parameter>
      </key>
      <key
            commandId="com.buildml.eclipse.commands.showDerivedInputFiles"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+ARROW_RIGHT">
         <parameter
               id="com.buildml.eclipse.commandParameters.derivedType"
               value="directDerived">
         </parameter>
      </key>
      <key
            commandId="com.buildml.eclipse.commands.showDerivedInputFiles"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Shift+Ctrl+ARROW_RIGHT">
         <parameter
               id="com.buildml.eclipse.commandParameters.derivedType"
               value="allDerived">
         </parameter>
      </key>
      <key
            commandId="com.buildml.eclipse.commands.showDerivedInputFiles"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+ARROW_LEFT">
         <parameter
               id="com.buildml.eclipse.commandParameters.derivedType"
               value="directInput">
         </parameter>
      </key>
      <key
            commandId="com.buildml.eclipse.commands.showDerivedInputFiles"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Shift+Ctrl+ARROW_LEFT">
         <parameter
               id="com.buildml.eclipse.commandParameters.derivedType"
               value="allInput">
         </parameter>
      </key>
      <key
            commandId="com.buildml.eclipse.commands.newEditorTab"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+N">
         <parameter
               id="com.buildml.eclipse.commandParameters.newEditorTab"
               value="duplicate">
         </parameter>
      </key>
      <key
            commandId="com.buildml.eclipse.commands.removeEditorTab"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+X">
      </key>
      <key
            commandId="com.buildml.eclipse.commands.previousEditorTab"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="ARROW_LEFT">
      </key>
      <key
            commandId="com.buildml.eclipse.commands.nextEditorTab"
            contextId="com.buildml.eclipse.contexts.buildmleditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="ARROW_RIGHT">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="BuildML Editor"
            id="com.buildml.eclipse.contexts.buildmleditor"
            name="BuildML Editor"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.buildml.eclipse.handlers.HasFeatureTester"
            id="com.buildml.eclipse.propertyTester.subEditorHasFeature"
            namespace="com.buildml.eclipse"
            properties="hasFeature"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
